{
    "compilerOptions" : {
        "target" : "esnext",
        "module" : "esnext",
        "moduleResolution" : "node",
        "isolatedModules" : true,
        "strict" : true,
        "types": [ "vite/client" ],
        "importHelpers" : true,
        "removeComments" : true,
        "skipLibCheck" : true,
        "strictNullChecks" : true,
        "paths" : { "~/*" : [ "./components/*" ] }
    },
    "include" : [ "stubs/ts/**/*", "tests/App/resources/ts/**/*" ],
    "exclude" : [ "node_modules/**/*", "vendor/**/*" ]
}
